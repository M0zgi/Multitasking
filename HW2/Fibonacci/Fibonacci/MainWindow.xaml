<Window x:Class="Fibonacci.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fibonacci"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="Tblfibonacci" HorizontalAlignment="Right" Margin="0,10,5,0" TextWrapping="Wrap" Text="Числа Фибоначчи" VerticalAlignment="Top" Height="25" Width="182" FontSize="20" FontWeight="Bold" />
        <TextBlock x:Name="Tblprimenumbers" HorizontalAlignment="Left" Margin="12,10,0,0" TextWrapping="Wrap" Text="Простые числа" VerticalAlignment="Top" Height="25" Width="186" FontSize="20" FontWeight="Bold" />
        <TextBlock x:Name="Tblnummin" HorizontalAlignment="Left" Height="24" Margin="10,56,0,0" TextWrapping="Wrap" Text="Минимальное число:" VerticalAlignment="Top" Width="205" FontSize="20" />
        <TextBlock x:Name="Tblnummax" HorizontalAlignment="Left" Height="24" Margin="10,96,0,0" TextWrapping="Wrap" Text="Максимальное число:" VerticalAlignment="Top" Width="205" FontSize="20" />
        <TextBox x:Name="txtnummin" HorizontalAlignment="Left" Height="24" Margin="221,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" Text="2" PreviewTextInput="txtnummin_PreviewTextInput" MouseLeave="txtnummin_MouseLeave" />
        <TextBox x:Name="txtnummax" HorizontalAlignment="Left" Height="24" Margin="221,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" PreviewTextInput="txtnummax_PreviewTextInput" />
        <TextBox x:Name="txtresult" HorizontalAlignment="Left" Height="334" Margin="14,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="299" IsReadOnly="True" IsReadOnlyCaretVisible="True"/>
        <Button x:Name="btncom" Content="Расчитать" HorizontalAlignment="Left" Margin="14,505,0,0" VerticalAlignment="Top" Width="109" Height="35" FontSize="20" Click="btncom_Click" />
        <Button x:Name="btnclr" Content="Очистить" HorizontalAlignment="Left" Height="35" Margin="203,505,0,0" VerticalAlignment="Top" Width="109" FontSize="20" Click="btnclr_Click" />
    </Grid>
</Window>  
